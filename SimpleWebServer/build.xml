<project basedir="." default="build" name="Raf's Simple Web Server">

   <property name="classes.dir" value="bin/edu/nmsu/cs/webserver" />
   <property name="source.dir" value="src/edu/nmsu/cs/webserver" />

   <target name="clean">
      <delete dir="bin" />
   </target>

   <target name="init" depends="clean">
      <mkdir dir="${classes.dir}" />
   </target>

   <target name="build" depends="init">
      <javac srcdir="${source.dir}" destdir="bin" />
   </target>

   <target name="run" depends="build">
      <java classpath="bin" classname="edu.nmsu.cs.webserver.WebServer" />
   </target>

</project>