<!-- Define the name of the project and the default target -->
<project name="SimpleWebServer" default="run" basedir=".">

    <!-- Define properties to be used in the build process -->
    <property name="src" location="src"/> <!-- location of source files -->
    <property name="bin" location="bin"/> <!-- location of compiled classes -->

    <!-- Define the "clean" target to delete the "bin" directory -->
    <target name="clean">
        <delete dir="bin"/>
    </target>

    <!-- Define the "build" target to compile the source files -->
    <target name="build" depends="clean">
        <mkdir dir="${bin}"/> <!-- create the "bin" directory if it does not exist -->
        <javac srcdir="${src}" destdir="${bin}" includeantruntime="false" debug="true"/> <!-- compile the Java source files in "src" and place the compiled classes in "bin" -->
    </target>

    <!-- Define the "compile" target to recompile the source files -->
    <target name="compile" depends="build">
        <javac srcdir="${src}" destdir="${bin}"/> <!-- recompile the Java source files in "src" and place the compiled classes in "bin" -->
    </target>

    <!-- Define the "run" target to run the web server -->
    <target name="run" depends="compile">
        <java classname="edu.nmsu.cs.webserver.WebServer" classpath="${bin}" fork="true" dir="./www/"/> <!-- run the main class of the web server from "bin", fork a new JVM, and set the current directory to "./www/" -->
    </target>

</project>
